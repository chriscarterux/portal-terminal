{
  "servers": [
    {
      "id": "context7",
      "name": "Context7 Documentation Server",
      "description": "Up-to-date documentation and code examples from official sources",
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp@latest"],
      "transport": "stdio",
      "enabled": true,
      "autoStart": true,
      "restartOnFailure": true,
      "maxRestarts": 3,
      "healthCheckInterval": 30000,
      "capabilities": ["tools", "resources"],
      "env": {
        "CONTEXT7_API_KEY": "${CONTEXT7_API_KEY}"
      }
    },
    {
      "id": "memory-bank",
      "name": "Memory Bank MCP",
      "description": "Persistent memory and knowledge management",
      "command": "npx",
      "args": ["@modelcontextprotocol/server-memory"],
      "transport": "stdio",
      "enabled": true,
      "autoStart": true,
      "restartOnFailure": true,
      "maxRestarts": 3,
      "healthCheckInterval": 30000,
      "capabilities": ["tools", "resources", "prompts"]
    },
    {
      "id": "filesystem",
      "name": "Filesystem MCP",
      "description": "Local filesystem access and project awareness",
      "command": "npx",
      "args": ["@modelcontextprotocol/server-filesystem", "."],
      "transport": "stdio",
      "enabled": true,
      "autoStart": true,
      "restartOnFailure": true,
      "maxRestarts": 3,
      "healthCheckInterval": 30000,
      "capabilities": ["tools", "resources"],
      "cwd": "."
    },
    {
      "id": "github",
      "name": "GitHub MCP",
      "description": "GitHub repository context and operations",
      "command": "npx",
      "args": ["@modelcontextprotocol/server-github"],
      "transport": "stdio",
      "enabled": false,
      "autoStart": false,
      "restartOnFailure": true,
      "maxRestarts": 3,
      "healthCheckInterval": 30000,
      "capabilities": ["tools", "resources"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_PERSONAL_ACCESS_TOKEN}"
      }
    },
    {
      "id": "tavily",
      "name": "Tavily Search MCP",
      "description": "AI-powered search and web content extraction",
      "command": "npx",
      "args": ["@modelcontextprotocol/server-tavily"],
      "transport": "stdio",
      "enabled": false,
      "autoStart": false,
      "restartOnFailure": true,
      "maxRestarts": 3,
      "healthCheckInterval": 30000,
      "capabilities": ["tools"],
      "env": {
        "TAVILY_API_KEY": "${TAVILY_API_KEY}"
      }
    }
  ],
  "settings": {
    "autoDiscovery": true,
    "healthMonitoring": true,
    "contextEnhancement": true,
    "maxConcurrentRequests": 10,
    "globalTimeout": 30000
  }
}