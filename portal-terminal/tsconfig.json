{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ES2022",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "declaration": true,
    "outDir": "dist",
    "jsx": "react-jsx"
  },
  "references": [
    { "path": "./apps/desktop" },
    { "path": "./packages/terminal-core" },
    { "path": "./packages/ui-components" },
    { "path": "./packages/ai-providers" },
    { "path": "./packages/mcp-client" },
    { "path": "./packages/collaboration" }
  ]
}